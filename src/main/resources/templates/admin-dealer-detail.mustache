{{>layout/headeradmin}}
<div class="main">
    <section class="module-small">
        <div class="container">
            <div class="row">
                <div class="col-sm-4 col-md-3 sidebar">
                    <div class="widget">
                        <h5 class="widget-title font-alt">관리자 화면</h5>
                        <ul class="icon-list">
                            <li><a href="/admin">관리자 페이지</a></li>
                            <li><a href="/">ISAM 홈페이지</a></li>
                        </ul>
                    </div>
                    <div class="widget">
                        <h5 class="widget-title font-alt">상품 관리</h5>
                        <ul class="icon-list">
                            <li><a href="/importcar/save">수입차 등록</a></li>
                            <li><a href="/admin/importcar">수입차 리스트</a></li>
                            <li><a href="/usedcar/save">국산차 등록</a></li>
                            <li><a href="/admin/usedcar">국산차 리스트</a></li>
                            <li><a href="/admin/directcar/save">직수입 등록</a></li>
                            <li><a href="/admin/directcar">직수입 리스트</a></li>
                            <li><a href="/admin/showroom/save">SHOW ROOM 등록</a></li>
                            <li><a href="/admin/showroom">SHOW ROOM 리스트</a></li>
                        </ul>
                    </div>
                    <div class="widget">
                        <h5 class="widget-title font-alt">게시판 관리</h5>
                        <ul class="icon-list">
                            <li><a href="/admin/notice">공지사항 목록</a></li>
                            <li><a href="/admin/news">뉴스 목록</a></li>
                        </ul>
                    </div>
                    <div class="widget">
                        <h5 class="widget-title font-alt">문의사항 관리</h5>
                        <ul class="icon-list">
                            <li><a href="/admin/contactus">일반 문의사항</a></li>
                            <li><a href="/admin/carcontact">차량 문의사항</a></li>
                        </ul>
                    </div>
                    <div class="widget">
                        <h5 class="widget-title font-alt">홈페이지 관리</h5>
                        <ul class="icon-list">
                            <li><a href="/admin/popup">팝업 관리</a></li>
                            <li><a href="/admin/dealer">딜러 관리</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-sm-8 col-sm-offset-1">
                    <div class="post">
                        <div class="post-header font-alt">
                            <h1 class="post-title">딜러 관리</h1>
                            <div class="post-meta">By&nbsp;<a href="#">관리자</a>
                            </div>
                        </div>
                        <div class="post-entry">
                            <form id="dealform" action="/api/v2/dealer/update/{{dealer.id}}" method="post" enctype="multipart/form-data">
                                    <div class="form-group">
                                        <input class="form-control" id="userid" name="userid" type="text" value="{{dealer.userid}}" readonly placeholder="아이디"/>
                                    </div>
                                    <div class="form-group">
                                        <input class="form-control" id="password" name="password" type="password" value="{{dealer.password}}" placeholder="비밀번호 변경"/>
                                    </div>
                                    <div class="form-group">
                                        <input class="form-control" id="name" name="name" type="text" value="{{dealer.name}}" readonly placeholder="이름"/>
                                    </div>
                                    <div class="form-group">
                                        <input class="form-control" id="shopname" name="shopname" type="text" value="{{dealer.shopname}}" placeholder="상사명"/>
                                    </div>
                                    <div class="form-group">
                                        <input class="form-control" id="shopadd" name="shopadd" type="text" value="{{dealer.shopadd}}" placeholder="상사주소"/>
                                    </div>
                                    <div class="form-group">
                                        <input class="form-control" type="text" id="shopnum" name="shopnum" value="{{dealer.shopnum}}" placeholder="상사 전화번호"/>
                                    </div>
                                    <div class="form-group">
                                        <input class="form-control" type="text" id="phonenum" name="phonenum" value="{{dealer.phonenum}}" placeholder="휴대번호"/>
                                    </div>
                                    <div class="form-group">
                                        <input class="form-control" type="text" id="email" name="email" value="{{dealer.email}}" placeholder="이메일"/>
                                    </div>
                                    <div class="form-group">
                                        <select id="regicheck" name="regicheck" class="form-control">
                                            <option value="0">미승인</option>
                                            <option value="1">승인</option>
                                        </select>
                                    </div>
                                    <div class="form-group">
                                    <img src="{{dealer.picturefullpath}}" alt="차량이미지"/>
                                    </div>
                                </form>
                            <input class="form-control" type="hidden" id="id" name="id" value="{{dealer.id}}"/>
                            <div class="col-sm-12">
                                <div class="form-group">
                                    <button type="button" class="btn btn-primary" id="dealer-btn-update">정보수정</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>



{{>layout/footeradmin}}