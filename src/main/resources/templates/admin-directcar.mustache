{{>layout/headeradmin}}

                <div class="col-sm-8 col-sm-offset-1">
                    <div class="carpost">
                        <div class="post-header font-alt">
                            <h1 class="post-title">갤러리 목록</h1>
                        </div>
                    </div>
                    <div class="post-entr">
                        <table class="table table-striped table-border checkout-table">
                            <tbody>
                            <tr>
                                <th class="hidden-xs">차량 대표 사진</th>
                                <th>차량정보</th>
                                <th>수정/삭제</th>
                            </tr>
                            {{#galleryList}}
                                <tr>
                                    <td><a href="/gallery/detail/{{id}}"><img src="{{imgFullPath}}" alt="차량이미지"/></a></td>
                                    <td>
                                        <a href="/gallery/detail/{{id}}">
                                            <h7 class="product-title font-alt">{{title}}</h7>
                                        </a>
                                    </td>
                                    <td>
                                        <button type="button" class="btn btn-primary" onclick="location.href='/admin/gallery/update/{{id}}'" >수정</button>
                                        <button type="button" class="btn btn-primary" onclick="location.href='/admin/gallery/copy/{{id}}'" >복사</button>
                                        <input type="hidden" id="id" value="{{id}}">
                                        <button type="button" class="btn btn-danger" id="directcar-btn-delete">삭제</button>
                                    </td>
                                </tr>
                            {{/galleryList}}
                            </tbody>
                        </table>
                        <button type="button" class="btn btn-border-d btn-circle" onclick="location.href='?page={{previous}}'" >이전 페이지</button>
                        <button type="button" class="btn btn-border-d btn-circle" onclick="location.href='?page={{next}}'" >다음 페이지</button>
                    </div>
                </div>
            </div>
        </div>
    </section>

{{>layout/footeradmin}}