{{>layout/headeradmin}}

                <div class="col-sm-8 col-sm-offset-1">
                    <div class="carpost">
                        <div class="post-header font-alt">
                            <h1 class="post-title">회원 관리</h1>
                        </div>
                    </div>
                    <div class="post-entr">
                        <div style="text-align: right;">
                            <a href="/signup" role="button" class="btn btn-border-d btn-round">회원등록</a>
                        </div>
                        <table class="table table-striped table-border checkout-table">
                            <tbody>
                            <tr>
                                <th>번호</th>
                                <th class="hidden-xs">이름</th>
                                <th>아이디</th>
                                <th>휴대전화</th>
                                <th>이메일</th>
                                <th></th>
                            </tr>
                            {{#dealer}}
                                <tr>
                                    <th>{{id}}</th>
                                    <td>{{name}}</td>
                                    <td>{{userid}}</td>
                                    <td>{{phonenum}}</td>
                                    <td>{{email}}</td>
                                    <td>
                                        <input type="hidden" id="id" value="{{id}}"/>
                                        <a href="/admin/user/detail/{{id}}" role="button" class="btn btn-primary">수정</a>
                                        <button type="button" class="btn btn-danger" id="btn-dealer-delete">삭제</button>
                                    </td>
                                </tr>
                            {{/dealer}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>

