{{>layout/headerindex}}


<section class="home-section home-fade home-full-height" id="home">
    <div class="hero-slider">
        <ul class="slides">
            <li class="bg-dark-30 bg-dark shop-page-header" style="background-image:url(&quot;/image/maincamp1.jpg&quot;);">
                <div class="titan-caption">
                    <div class="caption-content">
                        <div class="font-alt mb-30 titan-title-size-1">K-CAMP</div>
                        <div class="font-alt mb-30 titan-title-size-4">신개념 캠핑카 렌탈 서비스</div>
                        <div class="font-alt mb-40 titan-title-size-1">"어딘가 자유롭게 떠나고 싶으신가요?"</div>
                    </div>
                </div>
            </li>
            <li class="bg-dark-30 bg-dark shop-page-header" style="background-image:url(&quot;/image/maincamp2.jpg&quot;);">
                <div class="titan-caption">
                    <div class="caption-content">
                        <div class="font-alt mb-30 titan-title-size-1">K-CAMP</div>
                        <div class="font-alt mb-40 titan-title-size-4">Exclusive Camping Cars</div>
                    </div>
                </div>
            </li>
        </ul>
    </div>
</section>
<div class="main">

    <section class="module-small" id="latest">
        <div class="container">
            <div class="row">
                <div class="col-sm-6 col-sm-offset-3">
                    <h2 class="module-title font-alt">포트폴리오</h2>
                </div>
            </div>
            <div class="row multi-columns-row">
        {{#galleryList}}
                <div class="col-sm-4 col-md-4 col-lg-4">
                    <div class="shop-item">
                        <div class="shop-item-image"><img src="{{imgFullPath}}" alt="Car Photo1"/>
                            <div class="shop-item-detail"><a class="btn btn-round btn-b" href="/portfolio/detail/{{id}}">자세히보기</a></div>
                        </div>
                        <h5 class="shop-item-title font-alt"><a href="/portfolio/detail/{{id}}">{{title}}</a></h5>
                    </div>
                </div>
            </div>
        {{/galleryList}}
            <div class="row mt-30">
                <div class="col-sm-12 align-center"><a class="btn btn-b btn-round" href="/portfolio">더 보기</a></div>
            </div>
        </div>
    </section>


    <section class="module" id="news">
        <div class="container">
            <div class="row">
                <div class="col-sm-6 col-sm-offset-3">
                    <h2 class="module-title font-alt">공지사항</h2>
                </div>
            </div>
            <div class="row multi-columns-row post-columns wo-border">
{{#notice}}
                    <div class="col-sm-6 col-md-4 col-lg-4">
                        <div class="post mb-40">
                            <div class="post-header font-alt">
                                <h2 class="post-title"><a href="/notice/detail/{{id}}">{{title}}</a></h2>
                            </div>
                            <div class="post-more"><a class="more-link" href="/notice">더 보기</a></div>
                        </div>
                    </div>
{{/notice}}
            </div>
        </div>
    </section>


    {{>layout/footermain}}