{{>layout/headermain}}

<div class="main">
    <section class="module bg-dark-60 about-page-header" data-background="/image/inst_pn_test2.jpg">
        <div class="container">
            <div class="row">
                <div class="col-sm-6 col-sm-offset-3">
                    <h2 class="module-title font-alt">게시글 수정</h2>
                    <div class="module-subtitle font-serif"> </div>
                </div>
            </div>
        </div>
    </section>

    <section class="module-medium" id="contact">
        <div class="container">
            <div class="row">
                <div class="col-sm-8 col-sm-offset-2">
                    <div class="col-md-13">
                        <form>
                            <div class="form-group">
                                <label for="title">글 번호</label>
                                <input type="text" class="form-control" id="id" value="{{news.id}}" readonly> <!-- 머스테치는 객체접근시 점으로 구분, post.id 이런식으로 접근함 -->
                            </div>
                            <div class="form-group">
                                <label for="title">제목</label>
                                <input type="text" class="form-control" id="title" value="{{news.title}}">
                            </div>
                            <div class="form-group">
                                <label for="author"> 작성자 </label>
                                <input type="text" class="form-control" id="author" value="{{news.author}}" readonly> <!-- Input태그에 읽기만 허용하는 속성. -->
                            </div>
                        </form>
                            <label for="content"> 내용 </label>
                            <textarea class="form-control" id="summernote"
                                  name="content" placeholder="content" rows="7">{{{news.content}}}</textarea>
                        <hr>
                        <a href="/news" role="button" class="bbtn btn-g btn-round">취소</a>
                        <button type="button" class="btn btn-primary" id="btn-news-update">수정 완료</button>
                        <button type="button" class="btn btn-danger" id="btn-news-delete">삭제</button>
                    </div>
                </div>
            </div>
        </div>
    </section>

{{>layout/footerboard}}