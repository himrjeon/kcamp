                        <div class="tab-pane active" id="data-sheet">
                            <table class="table table-striped ds-table table-responsive">
                                <tbody>
                                <tr>
                                    <th>기본정보</th>
                                    <th>설명</th>
                                </tr>
                                <tr>
                                    <td>제조사</td>
                                    <td>{{usedcar.carmanufacturer}}</td>
