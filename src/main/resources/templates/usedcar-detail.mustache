                                <tr>
                                    <td>모델</td>
                                    <td>{{usedcar.carmodel}}</td>
                                </tr>
                                <tr>
                                    <td>세부모델</td>
                                    <td>{{usedcar.carmodeldetail}}</td>
                                </tr>
                                <tr>
                                    <td>등급</td>
                                    <td>{{usedcar.cartrim}}</td>
                                </tr>
                                <tr>
                                    <td>세부등급</td>
                                    <td>{{usedcar.cartrimdetail}}</td>
                                </tr>
                                <tr>
                                    <td>연식</td>
                                    <td>{{usedcar.caryear}}</td>
                                </tr>
                                <tr>
                                    <td>배기량</td>
                                    <td>{{usedcar.carpower}} cc</td>
                                </tr>
                                <tr>
                                    <td>주행거리</td>
                                    <td>{{usedcar.cardistance}} km</td>
                                </tr>
                                <tr>
                                    <td>색상</td>
                                    <td>{{usedcar.carcolor}}</td>
                                </tr>
                                <tr>
                                    <td>연료</td>
                                    <td>{{usedcar.carfuel}}</td>
                                </tr>
                                <tr>
                                    <td>변속기</td>
                                    <td>{{usedcar.cartractor}}</td>
                                </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="col-sm-12">
                    <ul class="nav nav-tabs font-alt" role="tablist">
                        <li class="active"><a href="#description" data-toggle="tab"><span class="icon-tools-2"></span>차량설명</a></li>
                    </ul>
                    <div class="tab-content">
                        <div class="tab-pane active" id="description">
                            {{{usedcar.content}}}
                        </div>
                    </div>
                </div>
                <div class="col-sm-12">
                    <ul class="nav nav-tabs font-alt" role="tablist">
                        <li class="active"><a href="#reviews" data-toggle="tab"><span class="icon-tools-2"></span>구매문의</a></li>
                    </ul>
                    <div class="tab-content">
                        <div class="tab-pane active" id="reviews">
                            <div class="comment-form mt-30">
                                <h4 class="comment-form-title font-alt">문의하기</h4>
                                <form method="post">
                                    <div class="row">
                                        <div class="col-sm-4">
                                            <div class="form-group">
                                                <label class="sr-only" for="name">성함</label>
                                                <input class="form-control" type="text" id="guestname" name="guestname" placeholder="성함*" required="required" data-validation-required-message="성함"/>
                                            </div>
                                        </div>
                                        <div class="col-sm-4">
                                            <div class="form-group">
                                                <label class="sr-only" for="phone">Phone</label>
                                                <input class="form-control" type="text" id="phonenum" name="phonenum" placeholder="연락처*" required="required" data-validation-required-message="연락처"/>
                                            </div>
                                        </div>
                                        <div class="col-sm-4">
                                            <div class="form-group">
                                                <label class="sr-only" for="email">Email</label>
                                                <input class="form-control" type="email" id="email" name="email" placeholder="이메일 주소*" required="required" data-validation-required-message="이메일 주소"/>
                                            </div>
                                        </div>
                                        <div class="col-sm-12">
                                            <div class="form-group">
                                                <textarea class="form-control" rows="7" id="content" name="content" placeholder="문의내용" required="required" data-validation-required-message="문의내용"></textarea>
                                            </div>
                                        </div>
                                        <div class="col-sm-12">
                                            <button class="btn btn-round btn-d" id="btn-carguest-submit" type="submit">문의하기</button>
                                        </div>
                                        <input type="hidden" id="carinfo" name="carinfo" value="{{usedcar.title}}"/>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

