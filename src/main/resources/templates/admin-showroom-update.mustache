{{>layout/headeradmin}}

                <div class="col-sm-8 col-sm-offset-1">
                    <div class="post">
                        <div class="post-header font-alt">
                            <h1 class="post-title">포트폴리오 수정</h1>
                            <div class="post-meta">By&nbsp;<a href="#">관리자</a>
                            </div>
                        </div>
                        <div class="post-entry">
                            <form id="insertForm" action="/directcar/upload" method="post" enctype="multipart/form-data">
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        제목<input class="form-control" type="text" id="title" name="title" placeholder="제목" value="{{showroom.title}}">
                                    </div>
                                </div>
                                <input type="hidden" name="id" id="id" value="{{showroom.id}}">
                                <input type="hidden" name="filePath" id="filePath" value="{{showroom.filePath}}">
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        대표이미지
                                        <input class="form-control" type="file" id="file" name="file">
                                    </div>
                                </div>
                                <br><br>
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        상세내용
                                        <textarea class="form-control" id="summernote"
                                                  name="content" placeholder="content" rows="7">{{{showroom.content}}}</textarea>
                                    </div>
                                </div>

                            </form>

                            <div class="col-sm-12">
                                <div class="form-group">
                                    <a href="/admin/portfolio" role="button" class="btn btn-g btn-round">취소</a>
                                    <button type="button" class="btn btn-primary" id="showroom-btn-update">수정하기</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>



{{>layout/footeradmin}}