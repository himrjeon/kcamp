{{>layout/headeradmin}}
                <div class="col-sm-8 col-sm-offset-1">
                    <div class="post">
                        <div class="post-header font-alt">
                            <h1 class="post-title">회원 관리</h1>
                            <div class="post-meta">By&nbsp;<a href="#">관리자</a>
                            </div>
                        </div>
                        <div class="post-entry">
                            <form id="dealform" action="/api/v2/dealer/update/{{dealer.id}}" method="post" enctype="multipart/form-data">
                                    <div class="form-group">
                                        <input class="form-control" id="userid" name="userid" type="text" value="{{dealer.userid}}" readonly placeholder="아이디"/>
                                    </div>
                                    <div class="form-group">
                                        <input class="form-control" id="password" name="password" type="password" value="{{dealer.password}}" placeholder="비밀번호 변경"/>
                                    </div>
                                    <div class="form-group">
                                        <input class="form-control" id="name" name="name" type="text" value="{{dealer.name}}" readonly placeholder="이름"/>
                                    </div>
                                    <div class="form-group">
                                        <input class="form-control" type="text" id="phonenum" name="phonenum" value="{{dealer.phonenum}}" placeholder="휴대번호"/>
                                    </div>
                                    <div class="form-group">
                                        <input class="form-control" type="text" id="email" name="email" value="{{dealer.email}}" placeholder="이메일"/>
                                    </div>
                                </form>
                            <input class="form-control" type="hidden" id="id" name="id" value="{{dealer.id}}"/>
                            <div class="col-sm-12">
                                <div class="form-group">
                                    <button type="button" class="btn btn-primary" id="dealer-btn-update">정보수정</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>



{{>layout/footeradmin}}