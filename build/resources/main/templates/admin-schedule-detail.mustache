{{>layout/headeradmin}}

<div class="col-sm-8 col-sm-offset-1">
    <div class="carpost">
        <div class="post-header font-alt">
            <h1 class="post-title">예약 게시판</h1>
        </div>
    </div>
    <div class="post-entr">
        <table class="table table-striped table-border checkout-table">
            <tbody>
            <tr>
                <th>제목</th>
                <th class="hidden-xs">시작날짜</th>
                <th>종료날짜</th>
                <th>메모</th>
                <th></th>
            </tr>
            {{#schedulelist}}
                <tr>
                    <td><a href="/schedule/update/{{id}}">{{title}}</a></td>
                    <td>{{start}}</td>
                    <td>{{end}}</td>
                    <td>{{description}}</td>
                    <td>
                        <input type="hidden" id="id" value="{{id}}"/>
                        <a href="/admin/schedule/update/{{id}}" role="button" class="btn btn-primary">수정</a>
                        <button type="button" class="btn btn-danger" id="btn-book-delete">삭제</button>
                    </td>
                </tr>
            {{/schedulelist}}
            </tbody>
        </table>
        <button type="button" class="btn btn-border-d btn-circle" onclick="location.href='?page={{previous}}'" >이전 페이지</button>
        <button type="button" class="btn btn-border-d btn-circle" onclick="location.href='?page={{next}}'" >다음 페이지</button>
    </div>
</div>
</div>
</div>
</section>

