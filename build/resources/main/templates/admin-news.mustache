{{>layout/headeradmin}}
<div class="col-sm-8 col-sm-offset-1">
    <div class="carpost">
        <div class="post-header font-alt">
            <h1 class="post-title">공지사항</h1>
        </div>
    </div>
    <div class="post-entr">
        <div style="text-align: right;">
            <a href="/notice/save" role="button" class="btn btn-border-d btn-round">공지사항등록</a>
        </div>
        <table class="table table-striped table-border checkout-table">
            <tbody>
            <tr>
                <th>제목</th>
                <th class="hidden-xs">작성자</th>
                <th>등록일</th>
                <th></th>
            </tr>
            {{#news}}
                <tr>
                    <td><a href="/notice/update/{{id}}">{{title}}</a></td>
                    <td>{{author}}</td>
                    <td>{{modifiedDate}}</td>
                    <td>
                        <input type="hidden" id="id" value="{{id}}"/>
                        <a href="/notice/update/{{id}}" role="button" class="btn btn-primary">수정</a>
                        <button type="button" class="btn btn-danger" id="btn-news-delete">삭제</button>
                    </td>
                </tr>
            {{/news}}
            </tbody>
        </table>
        <button type="button" class="btn btn-border-d btn-circle" onclick="location.href='?page={{previous}}'" >이전 페이지</button>
        <button type="button" class="btn btn-border-d btn-circle" onclick="location.href='?page={{next}}'" >다음 페이지</button>
    </div>
</div>
</div>
</div>
</section>

{{>layout/footeradmin}}