{{>layout/headeradmin}}
                <div class="col-sm-8 col-sm-offset-1">
                    <div class="carpost">
                        <div class="post-header font-alt">
                            <h1 class="post-title">후기</h1>
                        </div>
                    </div>
                    <div class="post-entr">
                        <div style="text-align: right;">
                            <a href="/review/save" role="button" class="btn btn-border-d btn-round">후기등록</a>
                        </div>
                        <table class="table table-striped table-border checkout-table">
                            <tbody>
                            <tr>
                                <th>제목</th>
                                <th class="hidden-xs">작성자</th>
                                <th>이용차량</th>
                                <th>등록일</th>
                                <th></th>
                            </tr>
                            {{#notice}}
                                <tr>
                                    <td><a href="/review/update/{{id}}">{{title}}</a></td>
                                    <td>{{author}}</td>
                                    <th>{{selectcar}}</th>
                                    <td>{{modifiedDate}}</td>
                                    <td>
                                        <input type="hidden" id="id" value="{{id}}"/>
                                        <a href="/review/update/{{id}}" role="button" class="btn btn-primary">수정</a>
                                        <button type="button" class="btn btn-danger" id="btn-notice-delete">삭제</button>
                                    </td>
                                </tr>
                            {{/notice}}
                            </tbody>
                        </table>
                        <button type="button" class="btn btn-border-d btn-circle" onclick="location.href='?page={{previous}}'" >이전 페이지</button>
                        <button type="button" class="btn btn-border-d btn-circle" onclick="location.href='?page={{next}}'" >다음 페이지</button>
                    </div>
                </div>
            </div>
        </div>
    </section>

