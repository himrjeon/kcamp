1{{>layout/headermain}}

<div class="main">
    <section class="module bg-dark-60 about-page-header" data-background="/image/inst_pn_test2.jpg">
        <div class="container">
            <div class="row">
                <div class="col-sm-6 col-sm-offset-3">
                    <h2 class="module-title font-alt">문의사항 게시판</h2>
                    <div class="module-subtitle font-serif"> </div>
                </div>
            </div>
        </div>
    </section>
    <section class="module-small">
        <div class="container">
            <div class="row">
                <div class="col-sm-8 col-sm-offset-1">
                    <div class="post">
                        <div class="post-header font-alt">
                            <h1 class="post-title">{{guestbook.title}}</h1>
                            <div class="post-meta">By&nbsp;<a href="#">{{guestbook.guestname}}</a>
                            </div>
                        </div>
                        <div class="post-entry">
                            <p>연락처 : {{guestbook.phonenum}}</p>
                            <p>이메일 : {{guestbook.email}}</p>
                            <p>문의내용 : {{guestbook.content}}</p>
                        </div>

                    </div>

                    <div class="comments">
                        <h6 class="comment-title font-alt">댓글 목록</h6>
                        {{#comment}}
                            <div class="comment clearfix">
                                <div class="commentpost-content clearfix">
                                    <div class="comment-author font-alt"><a href="#"><h7>{{author}}</h7></a></div>
                                    <div class="comment-body">
                                        <h7>{{memo}}</h7>
                                    </div>
                                    <div class="comment-meta font-alt"><h7>{{modifiedDate}}</h7></a>
                                    </div>
                                </div>
                            </div>
                        {{/comment}}
                    </div>

                    <div class="comment-form">
                        <h6 class="comment-form-title font-alt">댓글</h6>
                        <form name="form" id="form" role="form" modelAttribute="replyVO" method="post">
                            <input class="form-control" type="text" id="memoauthor" name="memoauthor" placeholder="작성자" value ="{{#uName}}{{uName}}{{/uName}}"/>
                            <input type="hidden" id="id" value="{{guestbook.id}}">
                            <div class="form-group">
                                <textarea class="form-control"  id="memocontent" rows="4" placeholder="댓글을 입력해 주세요"></textarea>
                            </div>
                            <button class="btn btn-round btn-d" type="button" id="btnReplySave" >댓글달기</button>
                        </form>
                    </div>
                    <br>
                    <hr>
                     <a href="/contactus" role="button" class="btn btn-g btn-round">목록보기</a>


                </div>
            </div>
        </div>

    </section>



{{>layout/footermain}}